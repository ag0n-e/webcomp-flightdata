  "image": "",
  "searchTags": [
    "atc",
    "adsb",
    "mqtt",
    "websockets"
  ],
  "dist": {
    "basePath": "dist",
    "files": [
        "noi-mobility-atc.min.js"
    ],
    "scripts": [
      {
        "file": "noi-mobility-atc.min.js",
        "parameter": ""
      }
    ]
  },
  "configuration": {
    "tagName": "noi-mobility-atc",
    "options": [
      {
        "key": "lang",
        "type": "select",
        "label": "Two letter key for the language to be used. Fallback is `en`",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "realtime",
        "type": "select",
        "label": "Show realtime data",
        "options": {
          "values": ["true", "false"],
          "default": "true"
        }
      },
      {
        "key": "departures",
        "type": "select",
        "label": "Show Skyalps departures",
        "options": {
          "values": ["true", "false"],
          "default": "true"
        }
      },
      {
        "key": "arrivals",
        "type": "select",
        "label": "Show Skypalps arrivals",
        "options": {
          "values": ["true", "false"],
          "default": "true"
        }
      },
      {
        "key": "regionswitch",
        "type": "select",
        "label": "Show region switcher",
        "options": {
          "values": ["true", "false"],
          "default": "true"
        }
      },
      {
        "key": "metricunits",
        "type": "select",
        "label": "Metric units",
        "options": {
          "values": ["false", "true"],
          "default": "false"
        }
      },
      {
        "key": "regions",
        "type": "object",
        "label": "Region-Switcher (first region = default screen)",
        "required": false,
        "options": {
          "default": {
            "0" : {
              "label": "Airport Bolzano/Bozen",
              "center": [11.3361503,  46.4607403],
              "zoom": 14.25
            },
            "1" : {
              "label": "Region",
              "center": [11.463606010174134, 46.42665096950925],
              "zoom": 10
            }
          }
        }
      },
      {
        "key": "colors",
        "type": "object",
        "label": "In-Map colors",
        "required": false,
        "options": {
          "default": {
            "primary": "#0068B4",
            "secondary": "#339966",
            "primary_contrast": "#ffffff",
            "secondary_contrast": "#ffffff"
          }
        }
      },
      {
        "key": "maxage",
        "type": "text",
        "label": "Max age of realtime data points until they are flagged as deletable (s)",
        "required": false,
        "options": {
          "default": "60"
        }
      },
      {
        "key": "style",
        "type": "text",
        "label": "CSS style definition",
        "required": false,
        "options": {
          "default": "--noi-font-family: 'Roboto', 'Helvetica Neue', sans-serif; --basic-font-size: 12px; --noi-primary: #000; --noi-primary-contrast: #ffffff; --noi-jam-strong: #e4c200; --noi-jam-light: #aaa"
        }
      }
    ]
  }
}



